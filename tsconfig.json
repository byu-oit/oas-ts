{
  "compilerOptions": {
    "declaration": true,
    "target": "ESNext",
    "module": "CommonJS",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "noEmitHelpers": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "include": [
    "**/*.spec.ts",
    "dist",
    "node_modules"
  ]
}
